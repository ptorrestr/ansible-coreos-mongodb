FROM debian:jessie
MAINTAINER "Pablo Torres" <pablo.torres.t@gmail.com>

RUN echo "create data user" \
	&& useradd datauser
	&& mkdir -p /data/db
	&& chown -R datauser:datauser /data

USER datauser

RUN echo "copy files"
ADD forever.sh /usr/local/bin/
ADD mongodb.conf /data/db

VOLUME ['/data']
ENTRYPOINT ['/usr/local/bin/forever.sh']
