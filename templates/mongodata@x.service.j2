[Unit]
Description=Mongo Data Volume Service
After=docker.service
Requires=docker.service
After=etcd.service
Requires=etcd.service

[Service]
User=core
KillMode=none

EnvironmentFile=/etc/environment
ExecStartPre=/usr/bin/docker pull {{ mongodata_image_name }} 
ExecStartPre=-/usr/bin/docker rm mongodata%i
ExecStart=/usr/bin/docker run --rm --name mongodata%i {{ mongodata_image_name }}
ExecStop=/usr/bin/docker stop mongodata%i
ExecStopPost=-/usr/bin/docker rm mongodata%i

Restart=always
RestartSec=10s

[X-Fleet]
X-Conflicts=%p@*.service
Conflicts=%p@*.service
